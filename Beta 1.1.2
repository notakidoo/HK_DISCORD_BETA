/* General safe defaults: single image, centered, no-repeat, cover */
:root {
  --_bg-size: var(--background-image-size, cover);
  --_bg-pos: var(--background-image-position, center);
}

/* Target common wrappers used by FrostedGlass / Discord clients */
html, body, #app-mount, .app, .frostedGlass-root, .frostedGlass-background, .fg-background, .fg-root {
  background-image: var(--background-image) !important;
  background-size: var(--_bg-size) !important;
  background-position: var(--_bg-pos) !important;
  background-repeat: no-repeat !important;
  background-attachment: fixed !important; /* prevents the image from shifting/tiling when panels move */
}

/* If the imported FrostedGlass applies the image to a pseudo-element, make sure those are constrained too */
.frostedGlass-root::before,
.fg-background::before,
.fg-root::before {
  content: "" !important;
  background-image: var(--background-image) !important;
  background-size: var(--_bg-size) !important;
  background-position: var(--_bg-pos) !important;
  background-repeat: no-repeat !important;
  background-attachment: fixed !important;
  position: fixed !important;
  inset: 0 !important;
  z-index: -1000 !important; /* keep it behind UI layers */
}

/* If FrostedGlass uses an absolutely positioned 'window' background inside the client,
   limit its max width/height so it won't overflow the visible window */
.fg-background, .frostedGlass-root, .fg-root {
  max-width: 100vw !important;
  max-height: 100vh !important;
  overflow: hidden !important;
}

/* In case parts of the background are still visible outside the client, clip it */
#app-mount, .app, .frostedGlass-root {
  -webkit-mask-image: linear-gradient(#000 0 100%); /* helps mask overflow on some clients */
  mask-image: linear-gradient(#000 0 100%);
}

